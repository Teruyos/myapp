<h2>カテゴリー一覧</h2>


<h3>カテゴリー名</h3>

<div id="news">
  <ul>
<% @categories.each do |category| %>

    <li>
    <%= category.name %>
    <%= link_to t('link.Show'), category %>
    <%= link_to t('link.Edit'), edit_category_path(category) %>
    <%= link_to t('link.Destroy'), category, method: :delete, data: { confirm: '削除してよろしいですか?' } %>
    </li>

<% end %>
  </ul>
  <%= link_to t('link.NewCategory'), new_category_path %>
</div>


